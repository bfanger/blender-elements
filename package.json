{
  "name": "blender-elements",
  "version": "1.0.0",
  "description": "Bringing the UI controls from Blender to the web",
  "main": "dist/index.js",
  "scripts": {
    "storybook": "start-storybook -s ./build -p 6006",
    "build-storybook": "build-storybook",
    "test": "eslint src stories",
    "build": "webpack --mode production && gulp build"
  },
  "author": "Bob Fanger <bfanger@gmail.com>",
  "license": "GPL-3.0",
  "eslintConfig": {
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "env": {
      "browser": true
    },
    "extends": [
      "plugin:vue/recommended",
      "plugin:react/recommended"
    ],
    "plugins": [
      "only-warn"
    ],
    "globals": {
      "blenderElements": true
    },
    "settings": {
      "react": {
        "version": "16"
      }
    }
  },
  "devDependencies": {
    "@storybook/addon-knobs": "^3.1.9",
    "@storybook/addon-notes": "^3.1.6",
    "@storybook/react": "^3.1.3",
    "babel-core": "^6.26.3",
    "babel-eslint": "^9.0.0",
    "bootstrap": "^4.1.2",
    "css-loader": "^1.0.0",
    "dejavu-sans": "^1.0.0",
    "eslint": "^5.6.0",
    "eslint-plugin-html": "^4.0.5",
    "eslint-plugin-only-warn": "^1.0.1",
    "eslint-plugin-react": "^7.1.0",
    "eslint-plugin-vue": "^4.7.1",
    "gulp": "^3.9.1",
    "gulp-livereload": "^4.0.0",
    "gulp-sass": "^4.0.1",
    "mini-css-extract-plugin": "^0.4.3",
    "node-sass": "^4.5.3",
    "react": "^16.5.2",
    "react-ace": "^6.1.4",
    "react-dom": "^16.5.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "styled-components": "^3.4.9",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.8"
  }
}
